@{

}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h1 class="bg-dark p-5 mb-3 text-light text-center"><strong>Cliente - Novo</strong></h1>

                @using (Html.BeginForm("Novo", "Cliente", FormMethod.Post))
                {
            <div class="row">

                    <div class="form-group col-md-6 my-3">
                        <label class="control-label" asp-for="Nome"></label>
                        <input class="form-control" asp-for="Nome" placeholder="Ex: Nome do Usuário" />
                    </div>

                    <div class="form-group col-md-6 my-3">
                        <label class="control-label" asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" placeholder="Ex: seuemail@email.com" />
                    </div>

                    @*<div class="form-group col-md-6 my-3">
                        <label class="control-label">Representante:</label>
                        <select class="form-control" name="RepresentanteId">
                            <option selected disabled>Selecione uma Opção</option>
                            @foreach (var rep in ViewBag.Representantes)
                            {
                                <option value="@rep.RepresentanteId">@rep.NomeRepresentante</option>
                            }
                        </select>
                    </div>*@

                    <div class="form-group col-md-6 my-3">
                        <label class="control-label">Representante</label>
                        <select class="form-control" asp-for="RepresentanteId" asp-items="@ViewBag.Representantes">
                            <option selected disabled>Selecione uma Opção</option>
                        </select>
                    </div>

                    <div class="form-group col-md-6 my-3">
                        <label class="control-label" asp-for="DataNascimento"></label>
                        <input class="form-control" asp-for="DataNascimento" value="dd/mm/aaaa" />
                    </div>

                    <div class="form-group col-md-6 my-3">
                        <label class="control-label" asp-for="Observacao"></label>
                        <textarea class="form-control" asp-for="Observacao" placeholder="Ex: Qualquer informação adicional"></textarea>
                    </div>

                    </div>

                    <div class="col-md-12 my-3 d-flex justify-content-end">
                        <a href="/Cliente/Index" class="btn btn-outline-danger btn-lg mr-3">Cancelar</a>
                        <button type="submit" class="btn btn-outline-primary btn-lg">Gravar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

