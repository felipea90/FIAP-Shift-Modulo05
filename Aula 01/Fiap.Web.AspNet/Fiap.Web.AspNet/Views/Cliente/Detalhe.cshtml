@model ClienteModel

@{
    //Layout = "_LayoutLogado";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h1 class="bg-dark p-5 mb-3 text-light text-center"><strong>Cliente - Detalhes</strong></h1>

                <form asp-controller="Cliente" asp-action="Detalhe" method="get">

                    <div class="row">

                        <div class="form-group col-md-6 my-3">
                            <div class="font-weight-bold">Cliente ID:</div>
                            <div class="form-control">@Model.ClienteId</div>
                        </div>

                        <div class="form-group col-md-6 my-3">
                            <div class="font-weight-bold">Nome do Cliente:</div>
                            <div class="form-control">@Model.Nome</div>
                        </div>

                        <div class="form-group col-md-6 my-3">
                            <div class="font-weight-bold">Representante:</div>
                            <div class="form-control">@Model.Representante.NomeRepresentante</div>
                        </div>

                        <div class="form-group col-md-6 my-3">
                            <div class="font-weight-bold">E-mail do Cliente:</div>
                            <div class="form-control">@Model.Email</div>
                        </div>

                        <div class="form-group col-md-6 my-3">
                            <div class="font-weight-bold">Data de Nascimento:</div>
                            <div class="form-control">@Model.DataNascimento</div>
                        </div>

                        <div class="form-group col-md-6 my-3">
                            <div class="font-weight-bold">Observação:</div>
                            <div class="form-control">@Model.Observacao</div>
                        </div>

                    </div>

                    <div class="col-md-12 my-3 d-flex justify-content-end">
                        <a href="/Cliente/Index" class="btn btn-outline-primary btn-lg mr-3">Voltar</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

