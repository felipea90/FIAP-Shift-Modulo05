@model LojaModel

@{

}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h1 class="bg-dark p-5 mb-3 text-light text-center"><strong>Loja - Alterar</strong></h1>

                <form asp-controller="Loja" asp-action="Alterar" method="post">

                    <input type="hidden" asp-for="LojaId" />

                    <div class="form-group col-md-6 my-3">
                        <div class="font-weight-bold">Loja ID:</div>
                        <div class="form-control">@Model.LojaId</div>
                    </div>

                    <div class="row">

                        <div class="form-group col-md-6 my-3">
                            <label class="control-label" asp-for="NomeLoja"></label>
                            <input class="form-control" asp-for="NomeLoja" />
                        </div>

                    </div>

                    <div class="col-md-12 my-3 d-flex justify-content-end">
                        <a href="/Loja/Index" class="btn btn-outline-danger btn-lg mr-3">Cancelar</a>
                        <button type="submit" class="btn btn-outline-primary btn-lg">Gravar</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


