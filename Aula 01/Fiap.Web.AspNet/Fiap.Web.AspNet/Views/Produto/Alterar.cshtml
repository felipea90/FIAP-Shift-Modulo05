@model Fiap.Web.AspNet.ViewModel.ProdutoLojaViewModel

@{

}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h1 class="bg-dark p-5 mb-3 text-light text-center"><strong>Produto - Alterar</strong></h1>

                <form asp-controller="Produto" asp-action="Alterar" method="post">

                    <input type="hidden" asp-for="Produto.ProdutoId" />

                    <div class="form-group col-md-6 my-3">
                        <div class="font-weight-bold">Produto ID:</div>
                        <div class="form-control">@Model.Produto.ProdutoId</div>
                    </div>

                    <div class="row">

                        <div class="form-group col-md-6 my-3">
                            <label class="control-label" asp-for="Produto.NomeProduto"></label>
                            <input class="form-control" asp-for="Produto.NomeProduto" placeholder="Ex: Nome do Produto" />
                        </div>

                        <div class="form-group col-md-6 my-3">
                            <label class="control-label">Lojas</label>
                            <select multiple class="form-control col-5" asp-for="LojaId" asp-items="ViewBag.Lojas"> </select>
                        </div>

                        <div class="col-md-12 my-3 d-flex justify-content-end">
                            <a href="/Produto/Index" class="btn btn-outline-danger btn-lg mr-3">Cancelar</a>
                            <button type="submit" class="btn btn-outline-primary btn-lg">Gravar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

